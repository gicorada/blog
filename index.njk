---
layout: "base.njk"
title: "Homepage"
---
{% for post in collections.blog | reverse %}
    {% if post.data.privacy === "public" %}
        <article>
            <div style="display: flex; align-items: center; gap: 1.5rem;">
                <div style="flex: 1;">
                    <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
                    <p class="mini">{{ post.data.excerpt }}</p>
                    <p>Pubblicato il {{ post.date | date('dd/MM/yyyy') }}</p>
                </div>
                <div>
                {% if post.data.img.url %}
                    <img src="{{ post.data.img.url | safe }}" alt="Immagine in evidenza" width="175" height="150" style="object-fit:contain;" class="featured-img">
                {% endif %}
                </div>
            </div>
        </article>
        <hr>
    {% endif %}
{% endfor %}
